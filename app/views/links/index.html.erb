<%- model_class = Link -%>
<div class="page-header">
  <h1><%=t 'views.link.index.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%=t 'views.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link_to link.name, link_path(link) %></td>
        <td><%= link_to link.url, link.url, :target => "_blank" %></td>
        <td>
          <%= link_to t('views.edit', :default => t("helpers.links.edit")),
                      edit_link_path(link), :class => 'btn btn-mini' %>
          <%= link_to t('views.destroy', :default => t("helpers.links.destroy")),
                      link_path(link),
                      :method => :delete,
                      :data => { :confirm => t('views.are_you_sure', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('views.new', :default => t("helpers.links.new")),
            new_link_path,
            :class => 'btn btn-primary' %>
